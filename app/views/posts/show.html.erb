<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Post detail:</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>Title: <%= @post.title %></p>
      <p>Body: <%= @post.body %></p>
      <p>Created: <%= @post.created_at %></p>
      <p>Updated: <%= @post.updated_at %></p>
    </div>
  </div>
  <%= link_to "Back to search results", search_path %>
</div>
